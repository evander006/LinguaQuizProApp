<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.QuizFragment"
    android:padding="15dp"
    android:background="@color/black"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/question_indincator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вопрос 7/30"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:fontFamily="@font/unboundedregular"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/timer"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/text_time"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_time"
            android:layout_alignParentEnd="true"
            android:text="5:46"
            android:textColor="@color/white"
            android:fontFamily="@font/unboundedregular"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/orange"
        android:layout_marginTop="8dp"
        android:progress="70"
        android:id="@+id/progress_indicator"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unboundedmedium"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:text="Что здесь вставить?"
                android:layout_marginVertical="10dp"/>
            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unboundedlight"
                android:backgroundTint="@color/orange"
                android:layout_marginVertical="10dp"
                android:text="button1"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unboundedlight"
                android:backgroundTint="@color/orange"
                android:layout_marginVertical="10dp"
                android:text="button2"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unboundedlight"
                android:backgroundTint="@color/orange"
                android:layout_marginVertical="10dp"
                android:text="button3"/>
            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unboundedlight"
                android:backgroundTint="@color/orange"
                android:layout_marginVertical="10dp"
                android:text="button4"/>
            <Button
                android:id="@+id/nextbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unboundedregular"
                android:layout_marginVertical="10dp"
                android:paddingHorizontal="30dp"
                android:layout_gravity="end"
                android:text="Next"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>